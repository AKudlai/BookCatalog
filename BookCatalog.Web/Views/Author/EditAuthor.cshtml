@model BookCatalog.Domain.Author

@{
    Layout = null;
}

@using (Html.BeginForm("AuthorBook", "Author", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.AuthorId)
    <div class="form-group">
        <label>First Name</label>
        @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.FirstName)
    </div>
    <div class="form-group">
        <label>Last Name</label>
        @Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.LastName)
    </div>
    <div>
        <input type="submit" value="Save" />
    </div>
}